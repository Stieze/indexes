{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Ukrposhta indexes",
    "description": "API to getting indexes from ukrposhta",
    "contact": {
      "email": "bohomolov.work@gmail.com"
    }
  },
  "host": "vpz",
  "basePath": "/api",
  "securityDefinitions": {},
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "tags": [
    {
      "name": "vpz",
      "description": "Allows you to manage index data"
    }
  ],
  "paths": {
    "/vpz": {
      "get": {
        "summary": "getAllData",
        "description": "Get information about all indexes",
        "tags": [
          "vpz"
        ],
        "operationId": "getAllData",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "type": "integer",
            "description": "Current page of indexes"
          },
          {
            "name": "address",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "Searched address among indexes"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Index"
            }
          },
          "400": {
            "description": "An error occurred while getting data.",
            "schema": {
              "example": [
                "The page must contain only numbers."
              ]
            }
          },
          "500": {
            "description": "An error occurred while getting data.",
            "schema": {
              "example": [
                "Failed to get data"
              ]
            }
          }
        }
      },
      "post": {
        "description": "Add a new indexes to the database",
        "summary": "addIndex",
        "tags": [
          "vpz"
        ],
        "operationId": "addIndex",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "enum": [
              "application/json"
            ],
            "type": "string",
            "description": ""
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "description": "Indexes objects that needs to be added to the database",
            "schema": {
              "example": {
                "index": 1010,
                "post": "МВПЗ Київ 10",
                "automation": "1",
                "region": "Київ",
                "districtOld": null,
                "districtNew": null,
                "utc": null,
                "city": "м. Київ",
                "street": "вул. Царика Григорія, 5",
                "phone": "0-800-300-545"
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Indexes have been created",
            "schema": {
              "example": [
                "An error occurred while getting data. The index {id} must contain only numbers.",
                "An error occurred while adding index {id}",
                "http://vpz/api/vpz/{id}"
              ]
            }
          }
        }
      },
      "delete": {
        "description": "Deleting selected indexes",
        "summary": "deleteIndexes",
        "tags": [
          "vpz"
        ],
        "operationId": "deleteIndexes",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "enum": [
              "application/json"
            ],
            "type": "string",
            "description": ""
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "description": "Indexes objects that needs to be added to the database",
            "schema": {
              "example": {
                "indexes": [
                  "011011",
                  "010010",
                  "105044"
                ]
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Indexes have been deleted"
          },
          "400": {
            "description": "The request contains no data.",
            "schema": {
              "example": [
                "The request contains no data."
              ]
            }
          }
        }
      }
    },
    "/vpz/{index}": {
      "get": {
        "description": "Returns a single index",
        "summary": "getIndexById",
        "tags": [
          "vpz"
        ],
        "operationId": "getIndexById",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "index",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID of index to return"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Index"
            }
          },
          "400": {
            "description": "An error occurred while getting data.",
            "schema": {
              "example": [
                "The index must contain only numbers."
              ]
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Region": {
      "title": "Region",
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "example": "Київська",
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "District": {
      "title": "District",
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "example": "Києво-Святошинський",
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "City": {
      "title": "City",
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string",
          "example": "м. Київ"
        }
      },
      "required": [
        "name"
      ]
    },
    "Utc": {
      "title": "Utc",
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "example": "Чабанівська селищна ОТГ",
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "Index": {
      "title": "Index",
      "xml": {
        "name": "Index",
        "attribute": false,
        "wrapped": false
      },
      "type": "object",
      "properties": {
        "index": {
          "type": "string",
          "example": "01010"
        },
        "post": {
          "type": "string",
          "example": ""
        },
        "automation": {
          "type": "boolean",
          "example": 1
        },
        "region": {
          "$ref": "#/definitions/Region/properties/name"
        },
        "districtOld": {
          "$ref": "#/definitions/District/properties/name"
        },
        "districtNew": {
          "$ref": "#/definitions/District/properties/name"
        },
        "utc": {
          "$ref": "#/definitions/Utc/properties/name"
        },
        "city": {
          "$ref": "#/definitions/City/properties/name"
        },
        "street": {
          "type": "string",
          "example": "вул. Царика Григорія, 5"
        },
        "phone": {
          "type": "string",
          "example": "0-800-300-545"
        }
      },
      "required": [
        "index",
        "post",
        "automation",
        "region",
        "city",
        "street",
        "phone"
      ]
    }
  }
}